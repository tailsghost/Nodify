<UserControl
    x:Class="Nodify.Views.NodeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="{Binding Width}"
    Height="{Binding Height, Converter={StaticResource HeightWithConnectorsConverter}, ConverterParameter=44}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Height}" />
            <RowDefinition Height="20" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Row="0"
            Fill="#AAF"
            Stroke="Black"
            StrokeThickness="1" />
        <Canvas Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Connectors}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Ellipse
                            Canvas.Left="{Binding X}"
                            Canvas.Top="{Binding Y}"
                            Width="10"
                            Height="10"
                            Fill="White"
                            PreviewMouseLeftButtonDown="OnConnectorMouseDown"
                            PreviewMouseLeftButtonUp="OnConnectorMouseUp"
                            Stroke="Black"
                            StrokeThickness="1"
                            Tag="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
        <StackPanel
            Grid.Row="2"
            Margin="0,4,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="12"
                Height="12"
                Margin="2"
                Command="{Binding AddConnectorCmd}"
                Content="+" />
            <Button
                Width="12"
                Height="12"
                Command="{Binding RemoveConnectorCmd}"
                Content="-" />
        </StackPanel>
    </Grid>
</UserControl>
